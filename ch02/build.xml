<?xml version="1.0"?>
<project name="ch02" default="dist">

   <property name="dist.dir" value="dist/blogposter" /> 
   <property name="jars.dir" value="../common/lib" /> 
   <property name="jar.name" value="ch02.jar" /> 
   
   <fileset id="common.jars" dir="${jars.dir}">
      <include name="xmlrpc-1.2-b1.jar" />
   </fileset>
   <path id="blogapp.path">
      <fileset refid="common.jars" />
   </path>

   <target name="build">
      <mkdir dir="build" />
      <javac srcdir="src" destdir="build" debug="true">
         <classpath>
            <path refid="blogapp.path"/>
         </classpath>
      </javac>      
   </target>
   
   <target name="dist" depends="build">
      <mkdir dir="${dist.dir}/lib" />
      <jar basedir="build" 
          destfile="${dist.dir}/lib/${jar.name}" includes="**/**" />      
      <copy todir="${dist.dir}" failonerror="false" >
         <fileset dir="./etc" includes="*.properties,*.sh,*.bat" />
      </copy>
      <chmod perm="+x">
          <fileset dir="${dist.dir}">
              <include name="**/*.sh"/>
          </fileset>
      </chmod>
      <copy todir="${dist.dir}/lib">
         <fileset refid="common.jars" />
	  </copy>
      <fixcrlf srcdir="./dist" eol="dos" includes="**/*.bat" />
   </target>
   
   <target name="clean">
      <delete dir="./build" />
      <delete dir="./dist" />
   </target>
   
</project> 